{
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {"jsx": true}
    },
    "extends": ["airbnb", "@typhonjs-fvtt/eslint-config-foundry.js"],
    "rules": {
        "indent": "off",
        "no-plusplus": "off",
        "no-console": ["error", { allow: ["warn", "error"] }],
        "no-shadow": ["error", { "builtinGlobals": true, "hoist": "all", "allow": ["event"] }]
    }
}
