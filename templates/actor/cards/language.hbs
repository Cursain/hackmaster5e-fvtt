<li class="card hmstyle" data-item-id="{{_id}}">
    <summary class="toggleswitch">
        <header>
            <label for="{{name}}">
                <div class="item-image"><img src="{{img}}" title="{{name}}" width="24" height="24"/></div>
                <h4 class="item-name">
                    {{name}}
                    {{#if data.specialty.checked}}
                        {{#if data.specialty.value}}({{data.specialty.value}}){{/if}}
                    {{/if}}
                </h4>
            </label>
        </header>
        <section>
            <div toggle class="rollable button" title="Verbal"
                data-dialog="skill"
                data-formula="1d100 + @resp.mod @resp.oper @bonus.total.verbal"
                data-item-id="{{_id}}">
                {{data.bonus.total.verbal}}
            </div>
            <div toggle class="rollable button" title="Literacy"
                data-dialog="skill"
                data-formula="1d100 + @resp.mod @resp.oper @bonus.total.literacy"
                data-item-id="{{_id}}">
                {{data.bonus.total.literacy}}
            </div>
            <div class="hide item-controls" toggle>
                <a class="item-control item-delete" title="Remove Skill"><i class="fas fa-trash"></i></a>
            </div>
        </section>
    </summary>
    <article class="hide" toggle>
        <div class="form-group">
            <label>{{localize "HM.literacy"}}:</label>
            <input class="editable" type="number" value="{{data.bonus.mastery.literacy}}"
                data-item-prop="data.bonus.mastery.literacy"
                data-dtype="Number"
            />
       </div>
        <div class="form-group">
            <label>{{localize "HM.verbal"}}:</label>
            <input class="editable" type="number" value="{{data.bonus.mastery.verbal}}"
                data-item-prop="data.bonus.mastery.verbal"
                data-dtype="Number"
            />
       </div>
       {{#if data.specialty.checked}}
       <div class="form-group">
           <label>{{localize "HM.specialty"}}:</label>
           <input class="editable" type="text" value="{{data.specialty.value}}"
               data-item-prop="data.specialty.value"
               data-dtype="String"
           />
       </div>
       {{/if}}
    </article>
</li>
