<ol class="cards-list">
    <label class="resource-label">{{localize "HM.equipped"}}</label>
    {{#each actor.weapons as |weapon|}}
        {{#if weapon.data.state.equipped.checked}}
            {{> "systems/hackmaster5e/templates/actor/cards/weapon.hbs" }}
        {{/if}}
    {{/each}}
    <label class="resource-label">{{localize "HM.unequipped"}}</label>
    {{#each actor.weapons as |weapon|}}
        {{#if weapon.data.state.equipped.checked}}{{else}}
            {{> "systems/hackmaster5e/templates/actor/cards/weapon.hbs" }}
        {{/if}}
    {{/each}}
</ol>
