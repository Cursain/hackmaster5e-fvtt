{{#each data.data.abilities as |ability key|}}
    <div class="ability">
        <span>
            {{ability.derived.value}}
            <span class="unit-dlm"></span>
            {{pad ability.derived.fvalue}}
            <span class="unit-pct"></span>
        </span>
        <label for="data.data.abilities.{{key}}.derived.value" class="resource-label rollable"
            data-dialog="ability"
            data-formula="1d20p + @resp.mod @resp.oper @abilities.{{key}}.derived.value"
            data-ability="{{localize (findConfigValue "ability_long" key)}}">
            {{localize (findConfigValue "ability_short" key)}}
        </label>
    </div>
{{/each}}
