<li class="item flexrow item-header">
    <label class="item-image">{{localize "HM.wound"}}</label>
    <label class="item-name">{{localize "HM.duration"}}</label>
    <div class="item-controls">
        <a class="item-control item-create" title="Create item"
            data-dialog="wound"
            data-type="wound">
            <i class="fas fa-plus"></i> New
        </a>
    </div>
</li>
{{#each actor.wounds}}
    <li class="item flexrow" data-item-id="{{_id}}">
        <label class="button" data-action="decHp">{{data.hp.value}}</label>
        <label class="button" data-action="decTimer">{{data.timer.value}}</label>
        <div class="item-controls">
            <a class="item-control item-edit" title="Edit Wound"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Wound"><i class="fas fa-trash"></i></a>
        </div>
    </li>
{{/each}}
