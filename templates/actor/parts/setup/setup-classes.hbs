<ol class="items-list">
    {{#each actor.character_classes}}
        <li class="item flexrow" data-item-id="{{_id}}">
            <div class="item-image"><img src="{{img}}" title="{{name}}" width="24" height="24"/></div>
            <h4 class="item-name">{{data._ord}}. {{name}}</h4>
            <div class="flexrow resource-label">HP: 
            {{#if data.hp.value}}
                {{data.hp.value}}
            {{else}}0
            {{/if}}
            {{#if data.hp.reroll.checked}}(reroll){{/if}} 
            </div>
            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </li>
    {{/each}}
</ol>
