<section class="grid-2col">
    <div>
        <label class="resource-label">{{localize "HM.prepared"}} {{localize "HM.spells"}}</label>
        <ol class="card-list">
        {{#each actor.spells}}
            {{#if data.prepared.checked}}
                {{> "systems/hackmaster5e/templates/actor/cards/spell.hbs" }}
            {{/if}}
        {{/each}}
        </ol>
    </div>
    <div>
        <ol class="card-list">
        <label class="resource-label">{{localize "HM.unprepared"}} {{localize "HM.spells"}}</label>
        {{#each actor.spells}}
            {{#if data.prepared.checked}}{{else}}
                {{> "systems/hackmaster5e/templates/actor/cards/spell.hbs" }}
            {{/if}}
        {{/each}}
        </ol>
    </div>
</section>
