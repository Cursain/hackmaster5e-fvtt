<span class="flexrow">
    <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
    <div>
        <input style="width: 100%;" name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
        <div>
            {{#if actor.race.data.adj}}
                {{actor.race.data.adj}}
            {{else}}
                {{actor.race.name}}
            {{/if}}
            {{#if actor.cclass}}
                {{actor.cclass.name}}-{{actor.cclass.data.level}}
            {{/if}}
        </div>
    </div>
</span>
