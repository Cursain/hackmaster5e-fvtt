<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        {{> "systems/hackmaster5e/templates/item/parts/header-logistics.hbs" }}
    </header>

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>

    <section class="sheet-body">
        <div class="tab" data-group="primary" data-tab="description">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
        </div>

        <div class="tab attributes" data-group="primary" data-tab="attributes">
            {{> "systems/hackmaster5e/templates/item/parts/logistics.hbs" }}
            <br>
            <div class="flex-group-center">
                <label class="resource-label">{{localize "HM.adjustments"}}</label>
                <div class="grid-5col">
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.dr"}}</label>
                        <input type="number" name="data.stats.dr.value" value="{{data.data.stats.dr.value}}" data-dtype="Number"/>
                    </div>
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.def"}}</label>
                        <input type="number" name="data.stats.def.value" value="{{data.data.stats.def.value}}" data-dtype="Number"/>
                    </div>
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.init"}}</label>
                        <input type="number" name="data.stats.init.value" value="{{data.data.stats.init.value}}" data-dtype="Number"/>
                    </div>
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.speed"}}</label>
                        <input type="number" name="data.stats.spd.value" value="{{data.data.stats.spd.value}}" data-dtype="Number"/>
                    </div>
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.movece"}}</label>
                        <input type="number" name="data.stats.movcf.value" value="{{numberFormat data.data.stats.movcf.value decimals=2}}" data-dtype="Number"/>
                    </div>
                </div>
            </div>
            <div class="grid grid-2col">
                <div class="resource">
                    <label class="resource-label">{{localize "HM.armortype"}}</label>
                    <select name="data.armortype" data-dtype="{{data.armortype}}">
                        {{#select data.data.armortype}}{{#each (findConfigObj "armortype") as |type t|}}
                            <option value="{{t}}">{{localize type}}</option>
                        {{/each}}{{/select}}
                    </select>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.quality"}}</label>
                    <input type="number" name="data.quality.value" value="{{data.data.quality.value}}" data-dtype="Number"/>
                </div>
            </div>
        </div> 
    </section>
</form>
