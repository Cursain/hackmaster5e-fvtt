<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="description">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
        </div>

        {{!-- Attributes Tab --}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="grid grid-3col">
                <div class="resource">
                    <label class="resource-label">{{localize "HM.hp_mod"}}</label>
                    <input type="number" name="data.hp_mod.value" value="{{data.data.hp_mod.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.knockback"}}</label>
                    <input type="number" name="data.kb_mult.value" value="{{data.data.kb_mult.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.reach_mod"}}</label>
                    <input type="number" name="data.reach_mod.value" value="{{data.data.reach_mod.value}}" data-dtype="Number"/>
                </div>
            </div>
            <li class="item flexrow">
                <label class="resource-label">{{localize "HM.size"}}</label>
                <select name="data.size" data-dtype="{{data.sizeSelect}}">
                    {{#select data.data.size}}{{#each (findConfigObj "size") as |type t|}}
                        <option value="{{t}}">{{localize type}}</option>
                    {{/each}}{{/select}}
                </select>
            </li>
        </div> 
    </section>
</form>
