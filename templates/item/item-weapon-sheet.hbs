<form class="{{cssClass}}" autocomplete="off">
    {{> "systems/hackmaster5e/templates/item/parts/header-logistics.hbs" }}

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>

    <section class="sheet-body">
        <div class="tab" data-group="primary" data-tab="description">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
        </div>

        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="grid grid-2col">
                <div class="flex-group-center">
                    <label class="resource-label">{{localize "HM.damage"}}</label>
                    <div class="grid-2col">
                        <div class="resource">
                            <label class="resource-label">{{localize "HM.normal"}}</label>
                            <input type="text" name="data.dmg.normal" value="{{data.data.dmg.normal}}" data-dtype="String"/>
                        </div>
                        <div class="resource">
                            <label class="resource-label">{{localize "HM.shield"}}</label>
                            <input type="text" name="data.dmg.shield" value="{{data.data.dmg.shield}}" data-dtype="String"/>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.ranged"}}</label>
                        <input type="checkbox" name="data.ranged.checked" {{checked data.data.ranged.checked}}/>
                    </div>
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.speed"}}</label>
                        <input type="number" name="data.stats.spd.value" value="{{data.data.stats.spd.value}}" data-dtype="Number"/>
                    </div>
                    <div class="resource">
                        <label class="resource-label">{{localize "HM.reach"}}</label>
                        <input type="number" name="data.reach.value" value="{{data.data.reach.value}}" data-dtype="Number"/>
                    </div>
                </div>
            </div>
            <div class="flexrow">
                <div class="resource">
                    <label class="resource-label">{{localize "HM.proficiency"}}</label>
                    <input type="text" name="data.proficiency" value="{{data.data.proficiency}}" data-dtype="String"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.skill"}}:</label>
                    <select name="data.skill" data-dtype="{{data.skill}}">
                        {{#select data.data.skill}}{{#each (findConfigObj "weaponskill") as |type t|}}
                            <option value="{{t}}">{{localize type}}</option>
                        {{/each}}{{/select}}
                    </select>
                </div>
            </div>
    </section>
</form>
