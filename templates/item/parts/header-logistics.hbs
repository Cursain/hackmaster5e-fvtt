<div class='card'>
    <header><label for='{{name}}'>
        <img class='profile-img' src='{{item.img}}' data-edit='img' title='{{item.name}}' width='64'/>
        <h1 class='itemname'><input name='name' type='text' size=48 value='{{item.name}}' placeholder='Name'/></h1>
    </label></header>
</div>
{{#with data.data}}
<div class='grid grid-3col'>
    <div>
        <div class='form-group'>
            <label class='resource-label'>{{localize 'HM.qty'}}</label>
{{#if (eq ../data.type 'item')}}
            <input type='number' name='data.qty' value='{{qty}}' data-dtype='Number'/>
{{else}}
            <input type='number' readonly value='1'/>
{{/if}}
        </div>
        <div class='form-group'>
            <label class='resource-label'>{{localize 'HM.avail.high'}}</label>
            <input type='number' name='data.avail.high' value='{{avail.high}}' data-dtype='Number'/>
        </div>
    </div><div>
        <div class='form-group'>
            <label class='resource-label'>{{localize 'HM.weight'}}</label>
            <input type='number' name='data.weight' value='{{weight}}' data-dtype='Number'/>
        </div>
        <div class='form-group'>
            <label class='resource-label'>{{localize 'HM.avail.med'}}</label>
            <input type='number' name='data.avail.med' value='{{avail.med}}' data-dtype='Number'/>
        </div>
    </div><div>
        <div class='form-group'>
            <label class='resource-label'>{{localize 'HM.price'}}</label>
            <input type='text' name='data.price' value='{{price}}' data-dtype='String'/>
        </div>
        <div class='form-group'>
            <label class='resource-label'>{{localize 'HM.avail.low'}}</label>
            <input type='number' name='data.avail.low' value='{{avail.low}}' data-dtype='Number'/>
        </div>
    </div>
</div>
{{/with}}
