<form class="{{cssClass}}" autocomplete="off">
    {{> "systems/hackmaster5e/templates/item/parts/header.hbs" }}

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>

    <section class="sheet-body">
        <div class="tab" data-group="primary" data-tab="description">
            {{> "systems/hackmaster5e/templates/item/parts/description.hbs" }}
        </div>

{{#with data.data}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="item-form">
                <div class="sidepanel">
                    <div class="options-block">
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.level"}}</label>
                            <select name="data.lidx">
                                {{#select lidx}}{{#each (findConfigObj "spellLevels") as |type t|}}
                                <option value="{{t}}">{{localize type}}</option>
                                {{/each}}{{/select}}
                            </select>
                        </div>
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.speed"}}</label>
                            <input type="number" name="data.speed" value="{{speed}}" data-dtype="Number"/>
                        </div>       
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.prayer"}}</label>
                            <input type="checkbox" name="data.divine" {{checked divine}}/>
                        </div>
                    </div>
                    <div class="options-block">
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.verbal"}}</label>
                            <input type="checkbox" name="data.component.verbal" {{checked component.verbal}}/>
                        </div>
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.somatic"}}</label>
                            <input type="checkbox" name="data.component.somatic" {{checked component.somatic}}/>
                        </div>
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.material"}}</label>
                            <input type="checkbox" name="data.component.material" {{checked component.material}}/>
                        </div>
    {{#if divine}}
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.catalyst"}}</label>
                            <input type="checkbox" name="data.component.catalyst" {{checked component.catalyst}}/>
                        </div>
                        <div class="options-row">
                            <label class="resource-label">{{localize "HM.divine"}}</label>
                            <input type="checkbox" name="data.component.divine" {{checked component.divine}}/>
                        </div>
    {{/if}}
                    </div>
                </div>
            </div>
        </div>
{{/with}}
    </section>
</form>
