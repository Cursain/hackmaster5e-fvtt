<form class="{{cssClass}}" autocomplete="off">
    {{> "systems/hackmaster5e/templates/item/parts/header.hbs" }}

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>

    <section class="sheet-body">
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="grid grid-4col flex-group-center">
                <div class="resource">
                    <label class="resource-label">{{localize "HM.atk"}}:</label>
                    <input type="number" name="data.atk.value" value="{{data.data.atk.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.def"}}:</label>
                    <input type="number" name="data.def.value" value="{{data.data.def.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.dmg"}}:</label>
                    <input type="number" name="data.dmg.value" value="{{data.data.dmg.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.spd"}}:</label>
                    <input type="number" name="data.spd.value" value="{{data.data.spd.value}}" data-dtype="Number"/>
                </div>
            </div>
        </div>
    </section>
</form>

