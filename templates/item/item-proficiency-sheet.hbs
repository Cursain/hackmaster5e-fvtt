<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
        </div>
    </header>

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>


    <section class="sheet-body">
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="grid grid-5col flex-group-center">
                <div class="resource">
                    <label class="resource-label">{{localize "HM.atk"}}:</label>
                    <input type="number" name="data.atk.mod.value" value="{{data.data.atk.mod.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.def"}}:</label>
                    <input type="number" name="data.def.mod.value" value="{{data.data.def.mod.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.dmg"}}:</label>
                    <input type="number" name="data.dmg.mod.value" value="{{data.data.dmg.mod.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.spd"}}:</label>
                    <input type="number" name="data.spd.mod.value" value="{{data.data.spd.mod.value}}" data-dtype="Number"/>
                </div>
                <div class="resource">
                    <label class="resource-label">{{localize "HM.skill"}}:</label>
                    <select name="data.skill" data-dtype="{{data.skill}}">
                        {{#select data.data.skill}}{{#each (findConfigObj "weaponskill") as |type t|}}
                        <option value="{{t}}">{{localize type}}</option>
                    {{/each}}{{/select}}
                </select>
                </div>
            </div>
        </div>
    </section>
</form>

