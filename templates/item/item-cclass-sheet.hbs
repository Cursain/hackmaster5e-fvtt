<form class="{{cssClass}}" autocomplete="off">
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>

    <section class="sheet-body">
        <div class="tab" data-group="primary" data-tab="description">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
        </div>
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="resource">
                <label class="resource-label">{{localize "HM.hitdie"}}:</label>
                <input type="text" name="data.hp.hitdie" value="{{data.data.hp.hitdie}}" data-dtype="String"/>
                <label class="resource-label">{{localize "HM.hp"}}:</label>
                <input type="number" name="data.hp.value" value="{{data.data.hp.value}}" data-dtype="String"/>
                <label class="resource-label">{{localize "HM.topmod"}}:</label>
                <input type="number" name="data.top_mod.value" value="{{data.data.top_mod.value}}" data-dtype="Number"/>
                <label class="resource-label">{{localize "HM.reroll"}}:</label>
                <input type="checkbox" name="data.hp.reroll.checked" {{checked data.data.hp.reroll.checked}}/>
            </div>
        </div>
    </section>
</form>
